<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="facility_reservation.mapper.FacilityMapper">
	<cache />
	<!-- getDetail; 시설 조회 -->
	<select id="getDetail" parameterType="int" resultType="Facility">

		select *
		from facility where f_id = #{f_id}

	</select>

	<!-- GetOptions; 예약 가능한 옵션 확인 -->
	<!-- 1. 시간 확인; GetTime -->
	<select id="getTimetable" resultType="Facility_time">
		select * from facility_time
	</select>


	<!-- 2. 남은 자리 확인; GetSpot -->
	<select id="getSpot" parameterType="Facility_reservation" resultType="Integer">
		select sum(fr_cnt) from facility_reservation
		where f_id =
		#{f_id}
		and TRUNC(fr_date) LIKE TRUNC(#{fr_date})
		and t_id = #{t_id}
	</select>


	<!-- Reserve; 예약하기 -->
	<!-- 1. 중복 예약 확인; CheckDoubleBook -->

	<select id="checkDoubleBook" parameterType="Facility_reservation" resultType="int">

		select
		r_id, f_id, t_id from facility_reservation
		where t_id = #{t_id}
		and r_id = #{r_id}
	</select>
</mapper>